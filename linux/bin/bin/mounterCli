#!/bin/sh

if [ "$1" == "YassineHD" ]; then
  sudo mount -t auto -v /dev/sda10 ~/mounting/YassineHD
	notify-send "ðŸ’» Mounted YassineHD."
elif [ "$1" == "Phone" ]; then
  anddrives=$(simple-mtpfs -l 2>/dev/null)
	chosen=$(echo "$anddrives" | dmenu -i -p "Which Android device?" | cut -d : -f 1)
  simple-mtpfs --device "$chosen" ~/mounting/Phone
	notify-send "ðŸ’» Mounted Phone."
elif [ "$1" == "C" ]; then
  sudo mount -t auto -v /dev/sda4 ~/mounting/c
	notify-send "ðŸ’» Mounted C."
elif [ "$1" == "UM_YassineHD" ]; then
  sudo -A umount /dev/sda10
	notify-send "ðŸ’» Unmounted YassineHD."
elif [ "$1" == "UM_Phone" ]; then
	chosen=$(awk '/simple-mtpfs/ {print $2}' /etc/mtab | dmenu -i -p "Unmount which device?")
	[ -z "$chosen" ] && exit
	sudo -A umount -l "$chosen" && notify-send "ðŸ¤– Android unmounted" "$chosen unmounted."
elif [ "$1" == "UM_C" ]; then
  sudo -A umount /dev/sda4
	notify-send "ðŸ’» Unmounted C."
else
  echo
fi
