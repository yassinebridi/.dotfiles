{
  "title": "CapsLock as ESC",
  "rules": [
    {
      "description": "CapsLock as ESC, without delay",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "escape",
              "lazy": false
            }
          ]
        }
      ]
    }
  ]
}
